<mvc:View
    controllerName="com.sap.takeexam.controller.Result"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    
    <Page title="{i18n>resultPageTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
                <Title text="{i18n>examCompletedTitle}" class="sapUiMediumMarginBottom"/>
                
                <Panel width="auto">
                    <content>
                        <VBox class="sapUiMediumMargin">
                            <HBox justifyContent="SpaceBetween">
                                <Label text="{i18n>scoreLabel}"/>
                                <Text text="{/score}%" class="sapMObjectNumberLarge"/>
                            </HBox>
                            
                            <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                                <Label text="{i18n>correctAnswersLabel}"/>
                                <Text text="{/correctAnswers}/{/totalQuestions}"/>
                            </HBox>
                            
                            <ProgressIndicator
                                percentValue="{/score}"
                                displayValue="{/score}%"
                                showValue="true"
                                state="{= ${/score} >= 70 ? 'Success' : (${/score} >= 40 ? 'Warning' : 'Error') }"
                                class="sapUiMediumMarginTop"/>
                        </VBox>
                    </content>
                </Panel>
                
                <Button text="{i18n>returnHomeButton}" press="onReturnHome" class="sapUiMediumMarginTop" type="Emphasized"/>
            </VBox>
        </content>
    </Page>
</mvc:View>
